{
  "name": "crossbell-monorepo",
  "version": "0.0.15",
  "license": "MIT",
  "private": true,
  "repository": "github:Crossbell-Box/crossbell-monorepo",
  "bugs": "https://github.com/Crossbell-Box/crossbell-monorepo/issues",
  "homepage": "https://github.com/Crossbell-Box/crossbell-monorepo#readme",
  "author": "Natural Selection Labs",
  "keywords": [],
  "scripts": {
    "build": "turbo run build",
    "build:pkgs": "turbo run build --filter=@crossbell/*",
    "build:release": "turbo run build:release --force",
    "bump-version": "bumpp package.json packages/*/package.json examples/*/package.json",
    "clean": "turbo run clean",
    "format": "run-p format:code format:package",
    "format:code": "prettier '@(packages|examples)/**/*.@(ts|tsx|html|json)' --write",
    "format:package": "format-package 'package.json' -w -c format-package.json",
    "lint": "eslint . --ext .ts,.tsx --fix --max-warnings 0",
    "prepare": "husky install",
    "release": "run-s build:release bump-version",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "bumpp": "^8.2.1",
    "commander": "^10.0.0",
    "esbuild": "^0.17.7",
    "esbuild-css-modules-plugin": "^2.7.1",
    "esbuild-register": "^3.4.2",
    "eslint": "8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "format-package": "^7.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "msw": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "tsconfig-paths": "^4.1.2",
    "tsd": "^0.25.0",
    "tslib": "^2.5.0",
    "tsup": "^6.6.0",
    "turbo": "^1.7.4",
    "typescript": "^4.9.5"
  }
}
